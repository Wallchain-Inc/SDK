{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES5",
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": true,
        "strict": true,
        "allowJs": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "strict": true,
    "include": [ "**/*.ts" ],
    "exclude": [ "node_modules", "dist", "**/*.test.ts", "**/*.config.ts" ]
}
